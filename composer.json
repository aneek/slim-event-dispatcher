{
  "name": "aneek/slim-event-dispatcher",
  "type": "library",
  "description": "An event dispatcher bridge between League Event and Slim Framework.",
  "license" : "MIT",
  "keywords": ["slim framework", "event", "event-dispatcher", "emitter", "listener"],
  "authors": [
    {
      "name": "Aneek Mukhopadhyay",
      "email": "dream.aneek@gmail.com"
    }
  ],
  "require": {
    "php": ">= 5.6",
    "slim/slim": "^3.0",
    "league/event": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.22",
    "symfony/var-dumper": "^3.0"
  },
  "autoload": {
    "psr-4": {
        "Slim\\Event\\": "./src/Event"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Slim\\Event\\Tests\\": "./tests"
      }
    },
    "config": {
      "optimize-autoloader": true
    }
}
